#include "common.h"

uniform float3 crosshair_color;

float4 main(float4 C : COLOR0) : SV_Target
{
    float4 color = C;

    if (C.r == C.g && C.r == C.b && C.g == C.b)
    {
        color.r = crosshair_color.x;
        color.g = crosshair_color.y;
        color.b = crosshair_color.z;
    }

    return color;
}